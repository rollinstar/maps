{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "app/*": ["src/app/*"],
            "assets/*": ["public/assets/*"],
            "shared/*": ["src/shared/*"],
            "tests/*": ["tests/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"]
    },
    "include": ["./src/"]
}
